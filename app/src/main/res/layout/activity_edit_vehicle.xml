<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.EditVehicleActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_vehicle"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/et_vehicle_registration_number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_registration_number"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_registration_number"
                    android:inputType="text"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/et_vehicle_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_name"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_name"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/et_vehicle_merk_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_merk"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_merk"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/et_vehicle_chassis_number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_chassis_number"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_chassis_number"
                    android:inputType="text"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/et_vehicle_machine_number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_machine_number"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_machine_number"
                    android:inputType="text"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/et_vehicle_police_number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_police_number"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_police_number"
                    android:inputType="text"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/et_vehicle_purchase_date_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_purchase_date"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_purchase_date"
                    android:inputType="date"/>

                <EditText
                    android:id="@+id/et_vehicle_value_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_value"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_value"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/et_vehicle_location_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vehicle_location"
                    android:background="@drawable/custom_input"
                    android:autofillHints="@string/vehicle_location"
                    android:inputType="text"/>

                <Spinner
                    android:id="@+id/spinner_condition_vehicle_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:background="@drawable/custom_input"
                    android:entries="@array/array_condition"/>

                <Button
                    android:id="@+id/button_update_vehicle_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/button_update_action"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>